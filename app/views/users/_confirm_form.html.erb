<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :name, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= content_tag :p, user.name, class: 'form-control-static' %>
        <%= f.hidden_field :name %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :age, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= content_tag :p, user.age, class: 'form-control-static' %>
        <%= f.hidden_field :age %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, class: 'control-label col-sm-4' %>
      <div class="col-sm-8">
        <%= image_tag user.image_url if user.image? %>
        <%= f.hidden_field :image_cache %>
      </div>
    </div>
  </div>
</div>
